body { margin:0; background: linear-gradient(to bottom right, #b6d0e2, #e3f2fd); display: flex; flex-direction: column; align-items: center; } h1 { text-align: center; font-family: cursive; font-size: 48px; margin-top: 60px; color: #0b3c5d; text-shadow: 2px 2px 5px rgba(0,0,0,0.3); letter-spacing: 1px; } .gallery { text-align: center; margin-top: 40px; background-color: rgba(173, 216, 230, 0.4); padding: 20px; border-radius: 30px; backdrop-filter: blur(5px); box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2); } img { width: 200px; height: 280px; display: inline-block; transition: all 0.5s ease; border-radius: 15px; margin: 10px; cursor: pointer; box-shadow: 0 4px 10px rgba(0,0,0,0.1); } img:hover { transform: scale(1.15); box-shadow: 0 15px 40px rgba(0,0,0,0.4); filter: brightness(1.1); }
